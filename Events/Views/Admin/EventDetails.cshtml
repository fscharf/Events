@model Events.Models.EVENTO

@{
    ViewBag.Title = "Editar evento";
}

<div class="row mb-3">
    <div class="col-lg-4">
        <h4>
            <a class="text-dark mr-2" href="@Url.Action("EventsList", "Admin")"><i class="fas fa-arrow-left"></i></a>
            @ViewBag.Title
        </h4>
    </div>
</div>

@using (Html.BeginForm("EventDetails", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.COD_EVENTO)

    <div class="form-row">
        <div class="col-lg-4">
            <div class="form-group">
                <label>Título</label>
                @Html.EditorFor(model => model.TITULO, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "30" } })
            </div>

            <div class="form-group">
                <label>Descrição</label>
                @Html.TextAreaFor(model => model.DESCRICAO, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                <label>Data</label>
                @Html.EditorFor(model => model.DATA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>

            <div class="form-group">
                <label>Horário</label>
                @Html.EditorFor(model => model.HORARIO, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>

            <div class="form-group">
                <label>Duração</label>
                @Html.EditorFor(model => model.DURACAO, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>

            <div class="form-group">
                <label>Imagem</label>
                @Html.EditorFor(model => model.IMAGEM_URL, new { htmlAttributes = new { @type = "file", @class = "form-control-file", required = "required" } })
            </div>

            <div class="form-group">
                <label>Sala</label>
                @Html.EditorFor(model => model.SALA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Atualizar <i class="fas fa-check-circle"></i></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(function () {
            var errorMsg = '@TempData["Error"]';

            if (errorMsg != '') {
                iziToast.error({
                    title: 'Erro',
                    message: errorMsg
                });
            }
        })
    </script>
}


