<div class="modal fade" tabindex="-1" id="profileModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bg-white border-0 p-3">
            <div class="modal-header border-0">
                <button type="button" data-dismiss="modal" class="btn btn-light close">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <div class="nav flex-column nav-pills sticky-top" id="accountTab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="profileTab" data-toggle="pill" href="#profile" role="tab">
                                <i class="fas fa-user-circle mr-2"></i>Conta
                            </a>
                            <a class="nav-link" id="securityTab" href="#security" data-toggle="pill">
                                <i class="fas fa-shield-alt mr-2"></i>Segurança
                            </a>
                            <a class="nav-link" id="settingsTab" data-toggle="pill" href="#settings" role="tab">
                                <i class="fas fa-cog mr-2"></i>Configurações
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="tab-content" id="tabContent">

                            <!-- profile tab -->
                            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                                <small class="text-muted mb-2">INFORMAÇÕES PESSOAIS</small>
                                <form>
                                    <div class="form-group">
                                        <label>Nome Completo</label>
                                        <input class="form-control" type="text" readonly value="@Session["userName"]">
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" type="text" readonly value="@Session["userEmail"]">
                                        <button class="btn btn-primary btn-sm my-2">Alterar email</button>
                                    </div>
                                </form>
                            </div>

                            <!-- security tab -->
                            <div class="tab-pane fade" id="security" role="tabpanel">
                                <small class="text-muted mb-2">SEGURANÇA</small>
                                <form>
                                    <div class="form-group">
                                        <label>Senha</label>
                                        <input class="form-control" type="password" readonly value="@Session["userPass"]">
                                        <button class="btn btn-primary btn-sm my-2">Alterar senha</button>
                                    </div>
                                </form>
                            </div>

                            <!-- settings tab -->
                            <div class="tab-pane fade" id="settings" role="tabpanel">
                                <small class="text-muted mb-2">CONFIGURAÇÕES</small>
                                <form>
                                    <div class="form-group">
                                        <!-- Default switch -->
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="night-mode">
                                            <label class="custom-control-label" for="night-mode">Modo Escuro</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
