@model IEnumerable<Events.Models.EVENTO>
@using System.Security.Claims;

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}
@{
    var userAuth = (ClaimsIdentity)User.Identity;

    if (userAuth.IsAuthenticated)
    {
    }
    else
    {
        <div class="jumbotron bg-main-gradient text-light mb-5">
            <div class="row">
                <div class="col-lg-6 mb-5 my-md-auto">
                    <img class="img-fluid" src="~/Content/img/undraw/undraw_celebration_0jvk.svg" />
                </div>
                <div class="col-lg-6 my-auto mx-auto">
                    <h2>Conecte-se ao Events</h2>
                    <h4>Tenha as melhores experiências com eventos, reserve sua vaga e receba certificados online</h4>
                    <a class="btn btn-primary btn-lg mt-3" href="/cadastro">
                        Cadastre-se grátis<i class="fas fa-angle-right ml-3"></i>
                    </a>
                </div>
            </div>
        </div>
    }
}

<div class="row mb-3">
    <div class="col-lg-6">
        <h5 class="text-muted">Eventos em alta</h5>
    </div>
    <div class="col-lg-6 text-right my-auto">
        <a href="/eventos">Explorar eventos<i class="fas fa-arrow-right ml-2"></i></a>
    </div>
</div>

<div class="row mb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 mb-2 mb-sm-0">
            <div class="card custom-card">
                <img class="card-img-top img-fluid  custom-object-fit-cover"
                     src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=890&q=80"
                     alt="Foto do evento" />
                <div class="card-body">
                    <div class="text-muted font-weight-bold mb-3" style="font-size: 0.8rem">
                        <span class="mr-2"><i class="fas fa-calendar mr-2"></i>@Html.DisplayFor(modelItem => item.DATA)</span>
                        <span><i class="fas fa-clock mr-2"></i>@Html.DisplayFor(modelItem => item.HORARIO)</span><br />
                    </div>
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.TITULO)</h4>
                    <p class="card-text text-muted text-truncate">@Html.DisplayFor(modelItem => item.DESCRICAO)</p>

                    <a href="@Url.Action("Details", "Events", new { id = item.COD_EVENTO })" class="stretched-link btn btn-primary btn-block">
                        <i class="fas fa-check-circle mr-2"></i>Participar
                    </a>
                </div>
            </div>
        </div>
    }
</div>
