@if (Session["IsAdmin"] != null)
{
    Response.Redirect("/admin");
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["UserID"] == null)
{
    <div class="row text-center text-sm-left mb-5">
        <div class="col-lg-6 my-auto">
            <img class="img-fluid" src="~/Content/img/undraw/undraw_celebration_0jvk.svg" />
        </div>
        <div class="col-lg-6 my-auto px-5">
            <h2 class="font-weight-bold">Conecte-se ao Events</h2>
            <h4 class="text-muted">Tenha as melhores experiências com eventos, reserve sua vaga e receba certificados online</h4>
            <a class="btn btn-primary btn-lg mt-3" href="/cadastro">
                Começar agora<i class="fas fa-angle-right ml-3"></i>
            </a>
        </div>
    </div>
}

@if (TempData["Success"] != null)
