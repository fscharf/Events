                    <a class="btn btn-outline-primary" href="#mainCarousel" role="button" data-slide="prev">
                        <span class="fas fa-chevron-left" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-outline-primary" href="#mainCarousel" role="button" data-slide="next">
                        <span class="fas fa-chevron-right" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- section 01 content -->
        <div id="mainCarousel" class="carousel slide mb-3" data-ride="carousel">
            <div class="carousel-inner">

