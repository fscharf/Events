@{
    Layout = "~/Views/Shared/_EventsLayout.cshtml";
}

<!-- header public -->
@if (Session["userID"] == null)
{
    <div class="container-fluid bg-main-gradient py-5 mb-3">
        <div class="container">
            <div class="row text-light">
                <div class="col-lg-6">
                    <img class="img-fluid" src="~/Content/img/undraw/undraw_celebration_0jvk.svg" />
                </div>
                <div class="col-lg-6 my-auto">
                    <h1 class="font-weight-bold">Conecte-se ao Events</h1>
                    <h4>Tenha as melhores experiências com eventos, reserve sua vaga e receba certificados online</h4>
                    <a class="btn btn-primary rounded-pill btn-lg mt-3" href="/cadastro">
                        Começar agora<i class="fas fa-arrow-right ml-3"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- section 01 public carousel -->
<div class="container-fluid bg-white py-5 mb-3">
    <div class="container">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible show p-3" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <!-- section 01 header -->
        <div class="row mb-3">
