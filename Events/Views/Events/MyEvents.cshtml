@model IEnumerable<Events.Models.INSCRICAO>
@{
    ViewBag.Title = "Meus eventos";
}

<div class="row mb-3">
    <div class="col-lg">
        <h5 class="text-muted">@ViewBag.Title</h5>
    </div>
</div>

@foreach (var item in Model)
{
    @Html.HiddenFor(modelItem => item.USUARIO.COD_USUARIO)
    <div class="row mb-3">
        <div class="col-lg-6">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@Url.Content(item.EVENTO.IMAGEM_URL)"
                             alt="Evento"
                             class="card-img h-100 object-fit-cover" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body text-left">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.EVENTO.TITULO)</h5>
                            <p class="card-text text-muted text-truncate">@Html.DisplayFor(modelItem => item.EVENTO.DESCRICAO)</p>
                            <hr />
                            <p>Código de inscrição: <span class="text-muted">@Html.DisplayFor(modelItem => item.COD_INSCRICAO)</span></p>
                            <a class="card-link" href="#qrcodeModal" data-toggle="modal"><i class="fas fa-qrcode"></i> QR Code</a>
                            <a class="card-link" href="#"><i class="fas fa-print"></i> Imprimir</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@Html.Partial("_QRCodeModal")
